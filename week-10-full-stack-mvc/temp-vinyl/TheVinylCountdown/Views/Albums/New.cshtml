@* ASSIGNMENT REQUIREMENT: "Define a ViewModel for the form (e.g., AlbumFormViewModel)" *@
@* "Create a form view that is strongly typed to the AlbumFormViewModel" *@
@model AlbumFormViewModel
@{
    ViewData["Title"] = "Add Album";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0">ðŸŽ¸ Add Album to Wishlist</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="Enter album title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Artist" class="form-label"></label>
                        <input asp-for="Artist" class="form-control" placeholder="Enter artist name" />
                        <span asp-validation-for="Artist" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Genre" class="form-label"></label>
                        <input asp-for="Genre" class="form-control" placeholder="e.g., Rock, Jazz, Pop" />
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ReleaseYear" class="form-label"></label>
                        <input asp-for="ReleaseYear" type="number" class="form-control" placeholder="e.g., 1973" min="1900" max="2100" />
                        <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-vinyl"></i> Add to Wishlist
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
