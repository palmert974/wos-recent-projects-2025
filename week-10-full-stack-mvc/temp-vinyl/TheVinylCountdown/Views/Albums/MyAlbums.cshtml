@model List<Album>
@{
    ViewData["Title"] = "My Albums";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>ðŸŽ¶ @ViewBag.Username's Albums</h1>
    <a asp-action="New" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add Album
    </a>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        <h4>You haven't added any albums yet!</h4>
        <p>Start building your wishlist by <a asp-action="New">adding your first album</a>.</p>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var album in Model)
        {
            <div class="col">
                <div class="card album-card h-100">
                    <div class="card-body">
                        <h5 class="card-title">ðŸŽ¸ @album.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@album.Artist</h6>
                        <p class="card-text mt-2">
                            @if (!string.IsNullOrEmpty(album.Genre))
                            {
                                <small class="d-block"><strong>Genre:</strong> @album.Genre</small>
                            }
                            @if (album.ReleaseYear.HasValue)
                            {
                                <small class="d-block"><strong>Year:</strong> @album.ReleaseYear</small>
                            }
                        </p>
                        <div class="mt-3">
                            <span class="badge bg-success">Your Album</span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Added on @album.CreatedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="mt-4">
        <p class="text-muted">You have <strong>@Model.Count</strong> album(s) in your wishlist.</p>
    </div>
}
